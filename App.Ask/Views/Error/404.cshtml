
@{
    ViewData["Title"] = "无法找到该页";
}

<div class="container">
    <div class="row p-5">
        <div class="offset-md-3 col-md-6">
            <div class="d-flex flex-column align-items-center">
                <img src="~/images/404.png" width="120" height="120" alt="404" asp-append-version="true" />
                <h2 class="mt-3">无法找到该页</h2>
                <p class="mt-3">暂时未能找到您查找的页面, <span id="num">5</span>秒后自动跳转到主页。</p>
                <a href="/" class="btn btn-danger mt-2">返回首页</a>
            </div>
        </div>
    </div>
</div>

@section js{ 
    <script>
        function redirect() {
            num--;
            document.getElementById("num").innerHTML = num;
            if (num < 0) {
                document.getElementById("num").innerHTML = 0;
                location.href = "/";
            }
        }
        var num = 6;
        setInterval("redirect()", 1000);
    </script>
}