@* sidebar侧边导航栏 *@
<div class="app-sidebar no-select">
    @* 导航提示 *@
    <div class="sidebar-header">导航</div>
    @* 导航容器 *@
<ul class="metismenu">
    @* 带图片的导航按钮 *@
    <li>
        <a asp-area="Admin" asp-controller="Home" asp-action="Index">
            <span class="fa fa-line-chart mr-2" aria-hidden="true"></span>
            <span>图表统计</span>
        </a>
    </li>

    <li>
        <a class="has-arrow" href="#">
            <i class="fa fa-cog mr-2"></i>
            <span>选项配置</span>
        </a>
        <ul class="mm-collapse">
            <li>
                <a asp-area="Admin" asp-controller="Config" asp-action="HomeConfig">首页配置</a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Config" asp-action="PageConfig">页面配置</a>
            </li>
        </ul>
    </li>


    <!--下拉按钮-->
    <li>
        <a class="has-arrow" href="#">
            <i class="fa fa-folder mr-2"></i>
            <span>分类管理</span>
        </a>
        <ul class="mm-collapse">
            <li>
                <a asp-area="Admin" asp-controller="Topic" asp-action="Index">话题管理</a>
            </li>
            <li>
                <a asp-area="Admin" asp-controller="Tag" asp-action="Index">标签管理</a>
            </li>
        </ul>
    </li>

    <li>
        <a asp-area="Admin" asp-controller="User" asp-action="Manage">
            <span class="fa fa-id-card-o mr-2"></span>
            <span>用户管理</span>
        </a>
    </li>

    <li>
        <a asp-area="Admin" asp-controller="Invite" asp-action="Index">
            <span class="fa fa-code-fork  mr-2" aria-hidden="true"></span>
            <span>邀请设置</span>
        </a>
    </li>

</ul>
</div>